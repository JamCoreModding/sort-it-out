{
    "schemaVersion": 1,
    "id": "sort_it_out",
    "version": "${version}",
    "name": "Sort It Out!",
    "description": "A capable inventory sorting mod that works either client-side or server-side",
    "authors": [
        "Jamalam"
    ],
    "contact": {
        "homepage": "https://github.com/JamCoreModding/sort-it-out",
        "sources": "https://github.com/JamCoreModding/sort-it-out",
        "issues": "https://github.com/JamCoreModding/sort-it-out/issues"
    },
    "license": "MIT",
    "icon": "assets/sort_it_out/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "io.github.jamalam360.sort_it_out.fabric.SortItOutFabric"
        ],
        "client": [
            "io.github.jamalam360.sort_it_out.fabric.SortItOutClientFabric"
        ],
        "modmenu": [
            "io.github.jamalam360.sort_it_out.fabric.ModMenuCompatibility"
        ]
    },
    "mixins": [
        "sort_it_out.mixins.json",
        "sort_it_out.client.mixins.json"
    ],
    "depends": {
        "fabric": ">=${fabric_api_version}",
        "minecraft": ">=${minecraft_version}",
        "architectury": ">=${architectury_version}",
        "jamlib": ">=${jamlib_version}"
    }
}
